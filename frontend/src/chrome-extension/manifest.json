{
  "manifest_version": 3,
  "name": "NoteDash",
  "version": "0.0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "description": "Effortlessly keep notes while browsing. Whether it's a to-do list or an important idea, your notes are just a click away!",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "public/16.png",
    "32": "public/32.png",
    "48": "public/48.png",
    "192": "public/192.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}